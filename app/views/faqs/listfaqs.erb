<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Manage FAQs
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">FAQs</a></li>
        <li class="active">Administer FAQs</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add FAQs</h3>
              
             
            </div>
            <!-- /.box-header -->
            
             <div class="box-body">
             <form action="/postedit" id="postcategory" class="form-horizontal" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="faq_title" class="col-sm-2 control-label">Question</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="faq_title" name="faq_title" placeholder="FAQ Question" value="">
                   
                  </div>
                </div>
                 <div class="form-group">
                <label for="faq_description" class="col-sm-2 control-label">Answer</label>

                <div class="col-sm-10">
                  <textarea class="textarea" placeholder="Notes" id="faq_description" name="faq_description"
                            style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                </div>
                </div>
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
                <button id="Submit" name="Submit" type="submit" class="btn btn-info pull-right">Add</button>
              </div> 
            
          </div>
          <!-- /.box -->

         

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">FAQ Lists </h3>
               
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <table id="example1"  class="table table-bordered">
                <tbody><tr>
                  <th style="width: 10px">#</th>
                  <th>Questions</th>
                  <th style="width: 110px"></th>
                </tr>
                <% a = 0 %>
                <% @faqs.each do |cd|%>
                <% a = a + 1 %>
                <tr>
                  <td><%=a%></td>
                  <td><%=cd.faq_title%></td>
                  <td>
                  <a   class="badge bg-orange " href="/managefaqs/edit/<%=cd.id%>">
                    Edit
                  </a> &nbsp; <a   class="badge bg-blue " href="/managefaqs/view/<%=cd.id%>">
                    View
                  </a> 
               
                </td>
                </tr>
                <% end %>
              
              </tbody></table>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                
               
              </div>
              <!-- /.box-footer -->
           
          </div>
          <!-- /.box -->
         
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

     
          
      
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->