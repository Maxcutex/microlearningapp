<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Manage FAQs
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">FAQs</a></li>
        <li class="active">Edit FAQs</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit FAQs</h3>
              
             
            </div>
            <!-- /.box-header -->
            
             <div class="box-body">
             <form action="/postedit" id="postcategory" class="form-horizontal" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="faq_title" class="col-sm-2 control-label">Question</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="faq_title" name="faq_title" placeholder="FAQ Question" value="<%=@faq.faq_title%>">
                    <input type="hidden" id="id" name="id" value="<%=@faq ? @faq.id : nil%>">
                   
                  </div>
                </div>
                 <div class="form-group">
                <label for="faq_description" class="col-sm-2 control-label">Answer</label>

                <div class="col-sm-10">
                  <textarea class="textarea" placeholder="Notes" id="faq_description" name="faq_description"
                            style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=@faq.faq_description%></textarea>
                </div>
                </div>
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
                <button id="Submit" name="Submit" type="submit" class="btn btn-info pull-right">Edit</button>
              </div> 
            
          </div>
          <!-- /.box -->

         

        </div>
        <!--/.col (left) -->
       
      </div>
      <!-- /.row -->

     </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->