<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Manage Categories
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Categories</a></li>
        <li class="active">Administer Categories</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
       
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Course Categories</h3>
                  <a type="button" class="btn btn-success pull-right" href="/admin/managecategories/new">
               Add New Category
              </a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <table class="table table-bordered">
                <tbody><tr>
                  <th style="width: 10px">#</th>
                  <th>Category(ies)</th>
                 <th>Status</th>
                  <th style="width: 110px"></th>
                </tr>
                <% a = 0 %>
                <% @categories.each do |cd|%>
                <% a = a + 1 %>
                <tr>
                  <td><%=a%></td>
                  <td><%=cd.category_name%></td>
                  <td><%=cd.is_active ? 'Active' : 'Not Active'%></td>
                  <td>
                  <a   class="badge bg-blue " href="/admin/managecategories/edit/<%=cd.id%>">
                    View / Edit
                  </a> &nbsp;
               
                </td>
                </tr>
                <% end %>
              
              </tbody></table>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                
               
              </div>
              <!-- /.box-footer -->
           
          </div>
          <!-- /.box -->
         
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

      
      
        

        
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->