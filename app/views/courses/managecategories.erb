<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Manage Categories
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Categories</a></li>
        <li class="active">Administer Categories</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">
              <%=category_id ? 'Edit' : 'Add'%> Category</h3>
              
             
            </div>
            <!-- /.box-header -->
            
             <div class="box-body">
             <form action="/postcategory" id="postcategory" class="form-horizontal" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="category_name" class="col-sm-2 control-label">Name</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="category_name" name="category_name" placeholder="Category Name" value="<%=@category ? @category.category_name : ''%>">
                    <input type="hidden" id="action_type" name="action_type" value="<%=category_id ? 'Edit' : 'Add'%>">
                    <input type="hidden" id="id" name="id" value="<%=@category ? @category.id : nil%>">
                  </div>
                </div>
                
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" value="<%= @category.is_active ? "1" : "0" %>" checked  id="is_active" name="is_active">  Is Active
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
                <button type="submit" class="btn btn-info pull-right"><%=category_id ? 'Edit' : 'Add'%> </button>
              </div> 
            
          </div>
          <!-- /.box -->

         

        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Course Categories</h3>
              <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#modal-topic-add">
               Add New Topic
              </button>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <table class="table table-bordered">
                <tbody><tr>
                  <th style="width: 10px">#</th>
                  <th>Category(ies)</th>
                 <th>Status</th>
                  <th style="width: 110px"></th>
                </tr>
                <% a = 0 %>
                <% @categories.each do |cd|%>
                <% a = a + 1 %>
                <tr>
                  <td><%=a%></td>
                  <td><%=cd.category_name%></td>
                  <td><%=cd.is_active ? 'Active' : 'Not Active'%></td>
                  <td>
                  <a   class="badge bg-blue " href="/managecategories/<%=cd.id%>">
                    View / Edit
                  </a> &nbsp;
               
                </td>
                </tr>
                <% end %>
              
              </tbody></table>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                
               
              </div>
              <!-- /.box-footer -->
           
          </div>
          <!-- /.box -->
         
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

      <div class="modal fade" id="modal-course-edit" style="display: none;">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Default Modal</h4>
              </div>
              <div class="modal-body">
                <p>One fine body…</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
      </div>

      <div class="modal fade" id="modal-topic-add" style="display: none;">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Default Modal</h4>
              </div>
              <div class="modal-body">
                <p>One fine body…</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>

        <div class="modal fade" id="modal-topic-edit" style="display: none;">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
