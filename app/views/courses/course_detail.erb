<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Add  Courses Topic
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Courses</a></li>
        <li class="active">Add Topic </li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        
        <!-- right column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">
              <%= action_type %> Course</h3>
              
             
            </div>
            <!-- /.box-header -->
            
             
                <form action="/postcoursedetail" id="postcourse" class="form-horizontal" method="POST" enctype="multipart/form-data">
                <div class="box-body">
                <% if action_type == 'Add'%>
                <div class="form-group">
                <label for="last_number" class="col-sm-2 control-label">Last Day Entered</label>
                <div class="col-sm-3">
                  <h5><%=last_number%></h5>
                </div>
                <% end %>
                </div>
               <div class="form-group">
                <label for="day_num" class="col-sm-2 control-label">Day Number</label>
                <div class="col-sm-3">
                  <select class="form-control" id="day_num" name="day_num">
                    <option>Select Day Number</option>
                    <% i = 0 %>
                     <% 30.times do |cd|%>
                      <% i = i +1 %>>
                          <% if @coursedetailedit %>
                        <% if @coursedetailedit.day_number == i%>
                         <option value="<%=i%>" selected >Day <%=i%></option>
                          <% else %>
                         <option value="<%=i%>"  > Day <%=i%></option>
                        <% end %>
                      <% else %>
                         <option value="<%=i%>"  >Day <%=i%></option>
                      <% end %>
                     
                     <% end %>
                  </select>
                </div>
                </div>

                <div class="form-group">
                  <label for="course_name" class="col-sm-2 control-label">Day Topic</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="day_topic" name="day_topic" placeholder="Topic for the day" value="<%=@course ? @course.name : ''%>">
                    <input type="hidden" id="action_type" name="action_type" value="<%=action_type%>">
                    <input type="hidden" id="course_id" name="course_id" value="<%=@course ? @course.id : nil%>">
                    <input type="hidden" id="detail_id" name="detail_id" value="<%=@coursedetail ? @course.id : nil%>">
                  </div>
                </div>
                 
                <div class="form-group">
                <label for="day_details" class="col-sm-2 control-label">Day Details</label>

                <div class="col-sm-10">
                  <textarea class="textarea" placeholder="Topic Details" id="day_details" name="day_details"
                            style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=@course ? @course.description : ''%></textarea>
                </div>
                </div>
               
                </div>
                <div class="form-group">
                    <label for="course_image" class="col-sm-2 control-label"> Image Upload</label>

                    <div class="col-sm-10">
                     <input type="file" id="course_image" name="course_image">

                    </div>
                  </div>
                
               
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" checked="checked"> Is Active
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
                <button type="submit" class="btn btn-info pull-right"><%=action_type%> </button>
              </div> 
            </form>
          </div>
          <!-- /.box -->

         

        </div>
        
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

      
        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->