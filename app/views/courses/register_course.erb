<div class="content-wrapper" style="min-height: 990px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Registration 
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Courses</a></li>
        <li class="active">Registration</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= @course.name%></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
           
              <div class="box-body">
                  <img class="img-responsive pad" src="/backend/dist/img/photo2.png" alt="Photo">
 
              <div class="pad" style="height:70px;"><p> <%= @course.description %></p></div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
              </div>
           
          </div>
          <!-- /.box -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">My Details</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/courses/<%= @course.id%>/postenroll" class="form-horizontal" method="POST">
              <div class="box-body">
              <% if @userenrolled.nil? %>
                <div class="form-group">
                  <label for="full_name" class="col-sm-2 control-label">Full Name</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="full_name" name="full_name" disabled placeholder="Full Name" value="<%=current_user.first_name%>&nbsp;<%=current_user.last_name%>">
                  </div>
                </div>
                <div class="form-group">
                  <label for="user_email" class="col-sm-2 control-label">Email</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="user_email" name="user_email" disabled placeholder="Email" value="<%=current_user.email%>">
                  </div>
                </div>
                <div class="form-group">
                  <label for="username" class="col-sm-2 control-label">UserName</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Password" disabled value="<%=current_user.username%>">
                  </div>
                </div>
               <div class="form-group">
                <label for="notes" class="col-sm-2 control-label">Description</label>

                <div class="col-sm-10">
                  <textarea class="textarea" placeholder="Notes" id="notes" name="notes"
                            style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=@course ? @course.description : ''%></textarea>
                </div>
                </div>

                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">Start Date</label>

                  <div class="col-sm-10">
                  <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                  <input type="text" class="form-control pull-right" id="datepicker" name="start_date">
                  </div>
                  </div>
                </div>
               <% else %>
               <span> You have enrolled for this course already </span>
                <% end %> 
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
              <% if @user_enrolled.nil? %>   <a href="/courses" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Register Course</button>
                <% else %>
                <a href="/courses/<%=@course.id%>/unsubscribe" class="btn btn-danger pull-right">Unsubscribe from Course</a>
                <% end %>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>