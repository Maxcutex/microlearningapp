<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         
      Manage Courses
         
        
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Courses</a></li>
        <li class="active">Administer Courses</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        
        <!-- right column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">
              <%=course_id ? 'Edit' : 'Add'%> Course</h3>
              
             
            </div>
            <!-- /.box-header -->
            
             
                <form action="/postcourse" id="postcourse" class="form-horizontal" method="POST" enctype="multipart/form-data">
                <div class="box-body">
                <div class="form-group">
                  <label for="course_name" class="col-sm-2 control-label">Title</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="course_name" name="course_name" placeholder="Course Name" value="<%=@course ? @course.name : ''%>">
                    <input type="hidden" id="action_type" name="action_type" value="<%=course_id ? 'Edit' : 'Add'%>">
                    <input type="hidden" id="id" name="id" value="<%=@course ? @course.id : nil%>">
                  </div>
                </div>
                 
                <div class="form-group">
                <label for="course_description" class="col-sm-2 control-label">Description</label>

                <div class="col-sm-10">
                  <textarea class="textarea" placeholder="Course Description" id="course_description" name="course_description"
                            style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%=@course ? @course.description : ''%></textarea>
                </div>
                </div>
                <div class="form-group">
                <label for="course_category" class="col-sm-2 control-label">Category</label>
                <div class="col-sm-3">
                  <select class="form-control" id="course_category" name="course_catgory">
                    <option>Select Category</option>
                     <% @categories.each do |cd|%>
                       <% if @course %>
                        <% if @course.id == cd.id %>
                         <option value="<%=cd.id%>" selected ><%=cd.category_name%></option>
                          <% else %>
                         <option value="<%=cd.id%>"  ><%=cd.category_name%></option>
                        <% end %>
                      <% else %>
                         <option value="<%=cd.id%>"  ><%=cd.category_name%></option>
                      <% end %>
                     <% end %>
                  </select>
                </div>
                </div>
                <div class="form-group">
                <label for="course_days" class="col-sm-2 control-label">Days</label>
                <div class="col-sm-3">
                  <select class="form-control" id="course_days" name="course_days">
                    <option>Select Days</option>
                    <% i = 0 %>
                     <% 30.times do |cd|%>
                     <% i += 1 %>
                        <% if @course.no_days == i %>
                         <option value="<%=i%>" selected ><%=i%></option>
                       
                      <% else %>
                         <option value="<%=i%>"  ><%=i%></option>
                      <% end %>
                     <% end %>
                  </select>
                </div>
                </div>
                <div class="form-group">
                    <label for="course_image" class="col-sm-2 control-label"> Image Upload</label>

                    <div class="col-sm-10">
                     <input type="file" id="course_image" name="course_image">

                    </div>
                  </div>
                
                <div class="form-group">
                <label for="course_level" class="col-sm-2 control-label">Level</label>
                <div class="col-sm-3">
                  <select class="form-control" id="course_level" name="course_level">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
                </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" <%=@course.is_active ? 'checked' : '' %>  id="is_active" name="is_active">  Is Active
                   
                      </label>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                
                <button type="submit" class="btn btn-info pull-right"><%=course_id ? 'Edit' : 'Add'%> </button>
              </div> 
            </form>
          </div>
          <!-- /.box -->

         

        </div>
        
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

      
        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->