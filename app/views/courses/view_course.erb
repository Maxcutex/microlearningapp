  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Courses
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Courses</a></li>
        <li class="active">View Course</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">




      <div class="row">
     
            <div class="col-md-12">
          <!-- Box Comment -->
          <div class="box box-widget">
            <div class="box-header with-border">
              <div class="user-block">
                <img class="img-circle" src="/backend/dist/img/user1-128x128.jpg" alt="User Image">
                <span class="username"><a href="#"><%= @course.instructor.first_name %>  &nbsp; <%= @course.instructor.last_name %> </a></span>
                <span class="description">Shared publicly - 7:30 PM Today</span>
               
              </div>
              <!-- /.user-block -->
               <div class="box-tools pull-right">
               <h5 class="box-title"> <%=@course.name%> 
            <%= @course.icon%></h5>
            </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            <div class="row">
            <div class="col-md-6">
              <img class="img-responsive pad"   src="/backend/dist/img/photo2.png" alt="Photo">
            </div>
            <div class="col-md-6">
           

              <div class="pad" style="height:70px;"><p> <%= @course.description %></p></div>
                  <% if @course.instructor.id == current_user.id %>
            <a href="/managecourses/<%=@course.id%>"> Edit Course </a>
            <% end %>
              <span class="pull-right text-muted"><%=course_difficulty(@course.level) %> </span>
               <span class="pull-right">Level: &nbsp;&nbsp;</span>
            </div>
            </div>
            
            </div>
            <!-- /.box-body -->
           
           
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
        
        
       
      </div>

       <div class="row">
    
        <!-- right column -->
        <div class="col-md-12">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Course Topics</h3>
               <% if @course.instructor.id == current_user.id %>
              <a href="/coursedetail/<%=@course.id%>/add" class="btn btn-success pull-right">
               Add New Topic
              </a>
              <% else %>
               <% if @userenrolled.nil? %>
               <a href="/courses/<%=@course.id%>/enroll" class="btn btn-info pull-right">
               Enroll For Course
              </a>
              <% else %>
                <a href="/courses/<%=@course.id%>/unsubscribe" class="btn btn-danger pull-right">Unsubscribe from Course</a>

               <% end %>
              <% end %>
               
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                <tbody><tr>
                  <th style="width: 90px">Day Num</th>
                 <th>Topic(s)</th>
                  <% if @course.instructor.id == current_user.id %> <th style="width: 150px"></th>
                  <% else %>
                 <th style="width: 90px"></th>
                  <% end %>
                </tr>
                <% a = 0 %>
                <% @coursedetails.each do |cd|%>
                <% a = a + 1 %>
                <tr>
                   
                   <td>Day <%=cd.day_number%></td>
                  <td><%=cd.day_topic%></td>
                  
                  <td>
                  <% if !@userenrolled.nil? || @course.instructor.id==current_user.id  %>
                  <a  class="badge bg-blue " href="/coursedetail/<%=cd.id%>"  >
                    View 
                  </a>  
                  <% end %>
                  <% if @course.instructor.id == current_user.id %>&nbsp;
                  <a   class="badge bg-orange " href="/coursedetail/<%=cd.course_id%>/edit/<%=cd.id%>" >
                    Edit
                  </a>
                  <% end %>
                </td>
                </tr>
                <% end %>
              
              </tbody></table>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                
              </div>
              <!-- /.box-footer -->
           
          </div>
          <!-- /.box -->
         
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->

    
  </div>
  <!-- /.content-wrapper -->
