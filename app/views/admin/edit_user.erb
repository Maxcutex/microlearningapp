  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Edit User - <%=@user.first_name%> <%=@user.last_name%>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Admin</a></li>
        <li class="active">Create</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit User Details </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/edituser" method="post" enctype = "multipart/form-data">
              <div class="box-body">
              <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="first_name">First Name</label>
                  <input type="text" class="form-control" placeholder="First name" name="user[first_name]" id="first_name"  value="<%=@user.first_name%>">                  
                  <input type="hidden" id="id" name="id" value="<%=@user ? @user.id : nil%>">
                </div>
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" placeholder="Username" name="user[username"] id="username"  disabled value="<%=@user.username%>">                  
                  <input type="hidden" class="form-control"  name="user[password"] id="password" value="123456">                  
                </div>
                <div class="form-group">
                  <label for="last_name">Biography </label>
                  <textarea class="form-control" rows="3" placeholder="About User ..." name="user[biography]"><%=@user.biography%></textarea>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <input type="text" class="form-control" placeholder="Last name" name="user[last_name]" id="last_name"  value="<%=@user.last_name%>">                  
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" placeholder="Email" name="user[email]" id="email"  disabled value="<%=@user.email%>">                  
                </div>
                <div class="form-group">
                    <label for="role_type"  >User Role</label>
                    <select class="form-control" id="role_type" name="user[role_type]">
                      <option value="-1">Select Role</option>
                           <option  value="2">Instructor</option>
                           <option value="3">Student</option>
                    </select>
                  </div>
              </div>
              </div>
                
                
                
                
                
                  
                
               
                <div class="checkbox">
                  <label>
                    <input type="checkbox" class="checkbox icheck" name="user[is_active]"> Is Active
                  </label>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary" id="Edit" name="Edit">Edit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->


        </div>
        <!--/.col (left) -->
       
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->