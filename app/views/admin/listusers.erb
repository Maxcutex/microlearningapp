<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Administration of Users
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Admin</a></li>
        <li class="active">Manage users</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
        

          <div class="box">
            <div class="box-header">
              <h3 class="box-title">List of All Users</h3>
               <a type="button" class="btn btn-success pull-right" href="/admin/users/new">
               Add New User/Instructor
              </a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped table-hover">
                <thead>
                <tr>
                  <th>UserName</th>
                  <th>Full Name</th>
                  <th>Role(s)</th>
                  <th>Date Entry</th>
                  <th>Is Active?</th>
                <th style="width: 110px"></th>
                </tr>
                </thead>
                <tbody>
                <% @users.each do |user|%>
                <tr>
                  <td><%=user.username%></td>
                  <td><%=user.first_name%> &nbsp;<%=user.last_name%>
                  </td>
                  <td><%=user.user_role.role.role_name%></td>
                  <td><%=user.updated_at%></td>
                  <td><%=user.is_active ? '<a   class="badge bg-green " href="#">Active</a>' : '<a   class="badge bg-red " href="#">Not Active</a>'%></td>
                  <td>
                  <a   class="badge bg-orange " href="/admin/users/edit/<%=user.id%>">
                     Edit
                  </a> &nbsp; <a   class="badge bg-blue " href="/admin/users/view/<%=user.id%>">
                     View
                  </a>  
               
                </td>
                </tr>
                <% end %>
                
                </tbody>
                <tfoot>
                <tr>
                  <th>UserName</th>
                  <th>Full Name</th>
                  <th>Role(s)</th>
                  <th>Date Entry</th>
                  <th>Is Active?</th>
                  <th></th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->